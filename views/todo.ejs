<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
    <style>
         table,
        thead,
        td,
        tr,
        th,
        tbody {
            border-collapse: collapse;
            padding: 15px;
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <form class="w-50 mx-auto px-3 py-3 shadow mt-4" action="/addtodo" method="post">
        <input type="text" name="title" placeholder="Title" class="form-control mt-3">
        <input type="text" name="content" placeholder="Content" class="form-control mt-3">
        <button type="submit" class="btn btn-dark mt-3">Add Todo</button>
    </form>
    <table class="mx-auto mt-3">  
        <thead>  
            <tr>  
                <th>S/N</th>  
                <th>Title</th>  
                <th>Content</th>  
                <th>Actions</th>  
            </tr>  
        </thead>  
    <% displayTodo.forEach((element , index) => { %>
            <tbody>  
                <tr>  
                    <td><%= index + 1 %></td> <!-- Assuming 'index' holds the current row index -->  
                    <td><%= element.title %></td>  
                    <td><%= element.content %></td>  
                    <td>  
                        <form action="/edit/<%= element._id %>" method="get">
                            <button class="btn btn-warning">Edit</button>  
                        </form>
                        
                    </td>  
                    <td>
                        <form action="/delete/<%= element._id %>" method="post">
                            <button class="btn btn-danger">Delete</button>  
                            <input type="text" hidden value="<%= index %>">
                        </form>
                        
                    </td>
                </tr>  
            </tbody>  
   <% }); %>
</table>
</body>
</html>
